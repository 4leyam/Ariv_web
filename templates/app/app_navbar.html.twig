<header class="masthead mb-auto">
    <div class="inner">

        <nav class=" navbar navbar-default navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">

                    <button class="navbar-toggle collapsed" type="button" data-toggle="collapse"
                            data-target="#menu" >
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>

                    </button>
                    <a href="{{ path('summary') }}" >
                        <img src="{{ asset('assets/images/logo.png') }}" width="65" height="65" alt="">
                    </a>
                </div>


                <div class="collapse navbar-collapse tab" id="menu">
                    <ul class="nav navbar-nav navbar-left tab">

                        <li class="{{ page == 'acceuil' ? 'active' }} tap">
                            <a href="{{ path('summary') }}"><b>Acceuil</b></a>
                        </li>

                                {% if searchForm is defined%}
                                    {#on ajoute la barre avec le fomulaire#}
                                    {{ include('app/adminTool.html.twig' , {'page' : page , 'searchForm' : searchForm}) }}
                                {% else %}
                                    {#on ajoute la barre navigation barre sans le formulaire de recherche#}
                                    {{ include('app/adminTool.html.twig' , {'page' : page}) }}
                                {% endif %}
                        <li class="{{ page == 'Connexion' ? 'active' }}">
                            <a href="{{ path('deconnexion') }}">
                                <b>
                                    {{ is_granted('IS_AUTHENTICATED_FULLY')? "Deconexion" : "S'identifier" }}
                                </b>
                            </a>
                        </li>
                    </ul>
                </div>


            </div>


        </nav>
    </div>
